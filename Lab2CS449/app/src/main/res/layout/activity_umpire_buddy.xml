<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.travis.lab1cs449.umpireBuddy"
    android:background="@color/colorPrimaryDark"
    android:theme="@style/AppTheme"
    app:popupTheme="@style/AppTheme">

    <Button
        android:id="@+id/Strike"
        android:layout_width="368dp"
        android:layout_height="59dp"
        android:text="@string/Strike_label"
        android:textSize="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintTop_toBottomOf="@+id/BallText"
        android:layout_marginRight="-4dp" />
    <Button
        android:id="@+id/Ball"
        android:layout_width="368dp"
        android:layout_height="59dp"
        android:text="@string/Ball_label"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/Strike"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="219dp" />

    <TextView
        android:id="@+id/StrikeText"
        android:layout_width="215dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="text"
        android:text="Strike: "
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:id="@+id/BallText"
        android:layout_width="215dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="text"
        android:text="Ball: "
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/StrikeText"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:id="@+id/StrikeNumber"
        android:layout_width="100dp"
        android:layout_height="43dp"
        android:ems="10"
        android:text="0"
        android:inputType="number"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/StrikeText"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toTopOf="@+id/StrikeText" />

    <TextView
        android:id="@+id/BallNumber"
        android:layout_width="100dp"
        android:layout_height="43dp"
        android:text="0"
        android:ems="10"
        android:inputType="number"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/BallText"
        app:layout_constraintTop_toTopOf="@+id/BallText"
        android:textColor="@color/colorWhite"/>


    <TextView
        android:id="@+id/out_number"
        android:layout_width="50dp"
        android:layout_height="43dp"
        android:textSize="20dp"
        android:inputType="number"
        android:textStyle="bold"
        android:text="0"
        app:layout_constraintTop_toTopOf="@+id/out_text"
        app:layout_constraintRight_toRightOf="@+id/out_text"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:id="@+id/out_text"
        android:text="Outs: "
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="100dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Ball"
        android:layout_marginRight="132dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/colorWhite"/>

</android.support.constraint.ConstraintLayout>


